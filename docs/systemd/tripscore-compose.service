[Unit]
Description=TripScore (Docker Compose)
Wants=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/path/to/tripscore
Environment=DOCKER_CONFIG=/path/to/tripscore/.docker
ExecStart=/usr/bin/docker compose up -d --build
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
